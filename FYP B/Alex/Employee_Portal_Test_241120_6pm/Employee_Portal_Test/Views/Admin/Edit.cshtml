@model Employee_Portal_Test.Models.Pmast

@{ ViewData["Title"] = "Edit"; }

    <body class="h-100">
        <div class="main-content-container container-fluid px-4">
            <!-- Page Header -->
            <div class="page-header row no-gutters py-4">
                <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
                    <h3 class="page-title">Employee Form</h3>

                </div>
            </div>
            <!-- End Page Header -->
            <hr />
            <div class="row">
                <div class="col-md-8">
                    <form asp-action="Edit">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <label>Employee Number</label>
                                    <input type="hidden" asp-for="Empno" />

                                    <input asp-for="Empno" class="form-control" readonly />
                                    <span asp-validation-for="Empno" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Employee Code</label>
                                    <input asp-for="EmpCode" class="form-control" maxlength="12" required />
                                    <span asp-validation-for="EmpCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" maxlength="50" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Add1" class="control-label">Address 1</label>
                            <input asp-for="Add1" class="form-control" maxlength="50" required />
                            <span asp-validation-for="Add1" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Dbirth" class="control-label">Date of Birth</label>
                                    <input asp-for="Dbirth" class="form-control" required />
                                    <span asp-validation-for="Dbirth" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Nric" class="control-label">NRIC</label>
                                    <input asp-for="Nric" class="form-control" maxlength="15" required />
                                    <span asp-validation-for="Nric" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Passport" class="control-label"></label>
                                    <input asp-for="Passport" class="form-control" maxlength="12" required />
                                    <span asp-validation-for="Passport" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Phone" class="control-label">Phone</label>
                                    <input asp-for="Phone" class="form-control" maxlength="24" required />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Phone2" class="control-label">Home Tel</label>
                                    <input asp-for="Phone2" class="form-control" maxlength="24" required />
                                    <span asp-validation-for="Phone2" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Mstatus" class="control-label">Marital Status*</label>
                            <input asp-for="Mstatus" class="form-control" maxlength="1" required />
                            <span asp-validation-for="Mstatus" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Relcode" class="control-label">Religion Code (C,M,H)</label>
                            <input asp-for="Relcode" class="form-control" maxlength="2" required />
                            <span asp-validation-for="Relcode" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Race" class="control-label"></label>
                                    <input asp-for="Race" class="form-control" maxlength="1" required />
                                    <span asp-validation-for="Race" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="National" class="control-label">Nationality</label>
                                    <input asp-for="National" class="form-control" maxlength="2" required />
                                    <span asp-validation-for="National" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Itaxno" class="control-label">Income Tax No.</label>
                                    <input asp-for="Itaxno" class="form-control" maxlength="20" required />
                                    <span asp-validation-for="Itaxno" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Epfno" class="control-label">EPF No.</label>
                                    <input asp-for="Epfno" class="form-control" maxlength="12" required />
                                    <span asp-validation-for="Epfno" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Bankcode" class="control-label">Name of Bank</label>
                                    <input asp-for="Bankcode" class="form-control" maxlength="12" required />
                                    <span asp-validation-for="Bankcode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Bankaccno" class="control-label">Bank Account Number</label>
                                    <input asp-for="Bankaccno" class="form-control" maxlength="20" required />
                                    <span asp-validation-for="Bankaccno" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Econtact" class="control-label">Emergency Contact Name</label>
                                    <input asp-for="Econtact" class="form-control" maxlength="10" required />
                                    <span asp-validation-for="Econtact" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Emerrship" class="control-label">Emergency Relationship</label>
                                    <input asp-for="Emerrship" class="form-control" maxlength="15" required />
                                    <span asp-validation-for="Emerrship" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Emerphone" class="control-label">Emergency Phone No</label>
                            <input asp-for="Emerphone" class="form-control" maxlength="24" required />
                            <span asp-validation-for="Emerphone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sname" class="control-label">Spouse Name</label>
                            <input asp-for="Sname" class="form-control" maxlength="30" required />
                            <span asp-validation-for="Sname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Snric" class="control-label">Spouse Nric</label>
                            <input asp-for="Snric" class="form-control" maxlength="24" required />
                            <span asp-validation-for="Snric" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="P_path" class="form-control" maxlength="22" hidden />
                            <span asp-validation-for="P_path" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="P_title" class="form-control" maxlength="22" hidden />
                            <span asp-validation-for="P_title" class="text-danger"></span>
                        </div>


                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                            </div>
                            <div class="form-group col-md-6">
                                <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Back to List</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </body>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
