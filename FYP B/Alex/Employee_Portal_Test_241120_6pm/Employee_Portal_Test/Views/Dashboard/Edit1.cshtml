@{ ViewData["Title"] = "Edit"; }
@model Employee_Portal_Test.Models.Pmast
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Project 1</title>
    <meta name="description" content="A high-quality &amp; free Bootstrap admin dashboard template pack that comes with lots of templates and components.">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" id="main-stylesheet" data-version="1.1.0" href="~/css/styles\shards-dashboards.1.1.0.min.css">
    <link rel="stylesheet" href="~/css/styles/extras.1.1.0.min.css">
    <script async defer src="https://buttons.github.io/buttons.js"></script>
</head>
<body class="h-100">


    <div class="container-fluid">
        <main>
            <!-- / .main-navbar -->
            <div class="main-content-container container-fluid px-4">
                <!-- Page Header -->
                <div class="page-header row no-gutters py-4">
                    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
                        <span class="text-uppercase page-subtitle">Overview</span>
                        <h3 class="page-title">User Profile</h3>

                    </div>
                </div>
                <!-- End Page Header -->
                <!-- Default Light Table -->
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card card-small mb-4 pt-3">
                            <div class="card-header border-bottom text-center">
                                <div class="mb-3 mx-auto">
                                    <img class="rounded-circle" src="~/Docimg/@Html.DisplayFor(model => model.P_title)" height="180" width="180" alt="User Avatar" onerror="this.onerror=null;this.src='~/images/avatars/4.jpg';" />
                                </div>

                                <h4 class="mb-0">@Html.DisplayFor(model => model.Name)</h4>

                                <span class="text-muted d-block mb-2">
                                    <a class="form-control-static">@Html.DisplayFor(model => model.Jobcode)</a>
                                </span>
                            </div>
                            <ul class="list-group list-group-flush">

                                <li class="list-group-item p-4">
                                    <strong class="text-muted d-block mb-2">Description</strong>
                                    <span>

                                        <a class="form-control-static">@Html.DisplayFor(model => model.Deptcode)</a>
                                    </span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="card card-small mb-4">
                            <div class="card-header border-bottom">
                                <h6 class="m-0">Account Details</h6>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item p-3">

                                    <form asp-action="Edit1" enctype="multipart/form-data">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="Empno" />
                                        <input type="hidden" asp-for="Name" />
                                        <input type="hidden" asp-for="Iname" />
                                        <input type="hidden" asp-for="EmpCode" />


                                        <div class="form-group">
                                            <label>Name</label>
                                            <input asp-for="Name" class="form-control" readonly />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">Address</label>
                                            <input asp-for="Add1" class="form-control" maxlength="50" placeholder="Address 1" required />
                                            <span asp-validation-for="Add1" class="text-danger"></span>
                                            <input asp-for="Add2" class="form-control" maxlength="50" placeholder="Address 2" required />
                                            <span asp-validation-for="Add2" class="text-danger"></span>
                                            <input asp-for="Town" class="form-control" maxlength="15" placeholder="Town" required />
                                            <span asp-validation-for="Town" class="text-danger"></span>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">

                                                        <input asp-for="State" class="form-control" maxlength="15" placeholder="State" required />
                                                        <span asp-validation-for="State" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-md-6">
                                                        <input asp-for="Postcode" class="form-control" maxlength="15" placeholder="Postcode" required />
                                                        <span asp-validation-for="Postcode" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Date of birth</label>
                                                    <input asp-for="Dbirth" class="form-control" readonly />
                                                    <span asp-validation-for="Dbirth" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="Nric" class="control-label">NRIC</label>
                                                    <input asp-for="Nric" class="form-control" maxlength="15" readonly />
                                                    <span asp-validation-for="Nric" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="Passport" class="control-label"></label>
                                                    <input asp-for="Passport" class="form-control" maxlength="12" readonly />
                                                    <span asp-validation-for="Passport" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="Phone" class="control-label">Phone</label>
                                                    <input asp-for="Phone" class="form-control" maxlength="24" required />
                                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="Phone2" class="control-label">Home Tel</label>
                                                    <input asp-for="Phone2" class="form-control" maxlength="24" readonly />
                                                    <span asp-validation-for="Phone2" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Mstatus" class="control-label">Marital Status*</label>
                                            <input asp-for="Mstatus" class="form-control" maxlength="1" required />
                                            <span asp-validation-for="Mstatus" class="text-danger"></span>
                                            <input type="file" name="ifile" />
                                            <button type="submit" value="Upload" asp-action="upload2" data-toggle="modal" data-target="#exampleModalCenter">
                                                Upload
                                            </button>
                                            <!-- Modal -->
                                            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            File uploaded
                                                        </div>
                                                    </div>
                                                </div>
                                                <hr />
                                                <h3>@ViewData["Message"]</h3>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Relcode" class="control-label">Religion Code (C,M,H)</label>
                                                <input asp-for="Relcode" class="form-control" maxlength="2" required />
                                                <span asp-validation-for="Relcode" class="text-danger"></span>
                                                <input type="file" name="ifile" />
                                                <input type="submit" value="Upload" asp-action="upload3" />
                                                <hr />
                                                <h3>@ViewData["Message"]</h3>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="Race" class="control-label"></label>
                                                        <input asp-for="Race" class="form-control" maxlength="1" readonly />
                                                        <span asp-validation-for="Race" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="National" class="control-label">Nationality</label>
                                                        <input asp-for="National" class="form-control" maxlength="2" readonly />
                                                        <span asp-validation-for="National" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="Itaxno" class="control-label">Income Tax No.</label>
                                                        <input asp-for="Itaxno" class="form-control" maxlength="20" required />
                                                        <span asp-validation-for="Itaxno" class="text-danger"></span>
                                                        <input type="file" name="ifile" />
                                                        <input type="submit" value="Upload" asp-action="upload4" />
                                                        <hr />
                                                        <h3>@ViewData["Message"]</h3>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="Epfno" class="control-label">EPF No.</label>
                                                        <input asp-for="Epfno" class="form-control" maxlength="12" readonly />
                                                        <span asp-validation-for="Epfno" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="Bankcode" class="control-label">Name of Bank</label>
                                                        <input asp-for="Bankcode" class="form-control" maxlength="12" readonly />
                                                        <span asp-validation-for="Bankcode" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="Bankaccno" class="control-label">Bank Account Number</label>
                                                        <input asp-for="Bankaccno" class="form-control" maxlength="20" readonly />
                                                        <span asp-validation-for="Bankaccno" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>




                                            <div class="form-group">
                                                <input type="submit" value="Save" class="btn btn-primary" />
                                            </div>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- End Default Light Table -->
            </div>


        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
    <script src="https://unpkg.com/shards-ui@latest/dist/js/shards.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Sharrre/2.0.1/jquery.sharrre.min.js"></script>
    <script src="~/js/scripts/extras.1.1.0.min.js"></script>
    <script src="~/js/scripts/shards-dashboards.1.1.0.min.js"></script>

</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    $(function () {
        $('#input1').on('keypress', function (e) {
            if (e.which == 32) {
                console.log('Space Detected');
                return false;
            }
        });
    });

    $('#myModal').on('shown.bs.modal', function () {
        $('#myInput').trigger('focus')
    })
</script>